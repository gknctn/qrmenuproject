@model Category
@{
    ViewData["Title"] = "Kategori Ekle";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form method="post" asp-action="CategoryCreate">
                <div class="alert" asp-validation-summary="All"></div>
                <div class="mb-3">
                    <label for="productName" class="form-label">Ürün Adı</label>
                    <input type="text" class="form-control" asp-for="@Model.CategoryName">
                </div>
                <div class="btn-group" role="group" aria-label="İşlem Butonları">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-plus"></i>
                        Ekle
                    </button>
                    <a type="button" asp-action="Index" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left"></i>
                        Geri
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>
