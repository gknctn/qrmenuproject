@model IQueryable<Contact>
@{
    ViewData["Title"] = "Iletişim";
}


<div class="row justify-content-center mb-5">
    <div class="col-md-12">
        <table class="table table-striped text-center">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Ad Soyad</th>
                    <th>Mail</th>
                    <th>Telefon Numarası</th>
                    <th>Mesaj Gönderilme Tarihi</th>
                    <th>Mesaj</th>
                    <th>İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.ContactId</td>
                        <td>@item.ContactName @item.ContactSurname</td>
                        <td>@item.ContactMail</td>
                        <td>@item.ContactPhoneNumber</td>
                        <td>@item.ContactDateCreated</td>
                        <td>
                            @if (item.ContactMessage?.Length > 30)
                            {
                                <p>@item.ContactMessage.Substring(0, 30)...</p>
                            }
                            else
                            {
                                <p>@item.ContactMessage</p>
                            }
                        </td>
                        <td>
                            <div class="btn-group">
                                <a class="btn btn-primary" asp-area="Admin" asp-controller="AdminContact" asp-action="ContactDetail" asp-route-id="@item.ContactId">
                                    <i class="fas fa-search"></i>
                                </a>
                                <a class="btn btn-danger" asp-area="Admin" asp-controller="AdminContact" asp-action="ContactDelete" asp-route-id="@item.ContactId">
                                    <i class="fas fa-trash"></i>
                                </a>
                            </div>

                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
