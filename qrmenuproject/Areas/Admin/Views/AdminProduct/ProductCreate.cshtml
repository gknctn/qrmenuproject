@model ProductDtoForInsertion
@{
    ViewData["Title"] = "Ürün Ekle";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form method="post" asp-action="ProductCreate" enctype="multipart/form-data">
                <div asp-validation-summary="All" class="alert"></div>
                <div class="mb-3">
                    <label for="productName" class="form-label">Ürün Adı</label>
                    <input type="text" class="form-control" asp-for="@Model.ProductName">
                </div>
                <div class="mb-3">
                    <label for="productPrice" class="form-label">Fiyat</label>
                    <input type="text" class="form-control" asp-for="@Model.ProductPrice">
                </div>
                <div class="mb-3">
                    @Html.Label("Ürün Kategori")
                    @Html.DropDownListFor(x => x.CategoryId, (List<SelectListItem>)ViewBag.Categorylist, new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.CategoryId, "", new { @class = "text-danger" })
                </div>
                <div class="mb-3">
                    <label for="ProductImage" class="form-label">Ürün Resim</label>
                    <input type="file" name="file" class="form-control" />
                </div>
                <div class="mb-3">
                    <label for="ProductShowcase" class="form-label">Yayinlansin mi? </label>
                    <input type="checkbox" asp-for="@Model.ProductShowcase" checked />
                </div>
                <div class="mb-3">
                    <label for="ProductDescription" class="form-label">Ürün Açıklama</label>
                    <textarea type="text" rows="6" class="form-control" asp-for="@Model.ProductDescription"></textarea>
                </div>
                <div class="btn-group" role="group" aria-label="İşlem Butonları">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-plus"></i>
                        Ekle
                    </button>
                    <a asp-action="Index" type="button" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left"></i>
                        Geri
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>
