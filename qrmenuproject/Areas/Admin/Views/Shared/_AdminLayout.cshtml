<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Qr Menu Admin - @ViewData["Title"] </title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/qrmenuproject.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/lib/font-awesome/all.min.css" asp-append-version="true" />
</head>
<body>
    <header>
        <partial name="_AdminNavbar" />
        @RenderSection("Header", required: false)
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            <div class="col-md-12">
                <h1 class="text-center">Admin Panel - @ViewData["Title"]</h1>
            </div>
            <hr>
            @RenderBody()
        </main>
    </div>

    <footer class="border-top fixed-bottom text-muted">
        <div class="container">
            &copy; @DateTime.Now.Year - Qr Menu
        </div>
        @RenderSection("Footer", required: false)

    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/font-awesome/js/all.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
