@model Contact
@{
    ViewData["Title"] = "İletişim";
}
<section class="container mt-5 mb-5">
    <div class="row">
        @await Component.InvokeAsync("CafeContactInfo")

        <div class="col-md-8">
            <h2 class="contact-h">Bize Ulaşın</h2>
            <span class="mt-3 mb-5">Rezervasyon ya da bilgi almak için bize ulaşın</span>
            <form class="row g-3 mt-3" method="post">
                <div asp-validation-summary="All" class="alert"></div>
                <input type="hidden" asp-for="@Model.ContactId" />
                <div class="col-md-6">
                    <label asp-for="@Model.ContactName" class="form-label">İsim</label>
                    <input type="text" class="form-control" asp-for="@Model.ContactName" id="inputname">
                </div>
                <div class="col-md-6">
                    <label asp-for="@Model.ContactSurname" class="form-label">Soyisim</label>
                    <input type="text" class="form-control" asp-for="@Model.ContactSurname" id="inputsurname">
                </div>
                <div class="col-md-6">
                    <label asp-for="@Model.ContactMail" class="form-label">Mail adresiniz</label>
                    <input type="email" class="form-control" asp-for="@Model.ContactMail" id="inputmail">
                </div>
                <div class="col-md-6">
                    <label asp-for="@Model.ContactPhoneNumber" class="form-label">Telefon Numarası</label>
                    <input type="tel" class="form-control" asp-for="@Model.ContactPhoneNumber" id="inputPhone">
                </div>

                <div class="col-md-12">
                    <label asp-for="@Model.ContactMessage" class="form-label">Mesaj</label>
                    <textarea id="inputMessage" asp-for="@Model.ContactMessage" class="form-control" rows="4" placeholder="Mesajınızı buraya yazın..."></textarea>
                </div>

                <div class="col-12">
                    <button type="submit" class="btn-contact-submit">Gönder</button>
                </div>
            </form>
        </div>
    </div>
</section>
<div id="map"></div>