@model CategoryWithProducts
@{
    ViewData["Title"] = "Anasayfa";
}

<h1 class="text-center mt-3 mb-3">MENÜ</h1>


@section Body {
    <div class="menu">
        <ul>
            <li>
                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="index" asp-route-id="0">Tümü</a>
            </li>
            @foreach (Category category in Model.Categories)
            {
                <li class="nav-item">
                    <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="index" asp-route-id="@category.CategoryId">
                        @category.CategoryName
                    </a>
                </li>
            }
        </ul>
    </div>
}
<div id="div1" class="my-div">
    <div class="container">
        <div class="menu-grid">
            @foreach (Product prd in Model.Products)
            {
                <partial name="_ProductCard" model="@prd" />
            }
        </div>
    </div>
</div>


